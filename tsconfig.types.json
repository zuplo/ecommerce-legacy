{
  "include": ["modules/**/*"],
  "exclude": ["./node_modules", "./dist", "./.zuplo"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "paths": {
      "@app/*": [".zuplo/*"]
    }
  }
}
